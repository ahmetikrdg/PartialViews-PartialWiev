@model ProductViewModel //yol
@{
    var popularClass=Model.Products.Count>2?"popular":""; //2 den fazla ürün varsa category rengini popular yap stylede tanımladım popuları o popularıda class olarak catgory başlığına yazdım
    var products=Model.Products;//productsa a Model.Products u atadım artık aşağıda Model.Products yerine sadece produsts kullanabilirim
    var categories=Model.Categories;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style> 
        .popular{
            color:green;
            font-weight:700;
        }

    </style>
</head>
<body>
    @await Html.PartialAsync("_navbar")
    <header>
        <div class="jumbotron jumbotron-fluit">
            <div class="container">
                <h1 class="display-4">shopapp</h1>
                <p class="lead">lorem 20</p>
            </div>
        </div>
    </header>
    <main>
         <div class="container">

            <div class="row">
                <div class="col-md-3">
                      @await Html.PartialAsync("_categories",categories)
                </div>
                <div class="col-md-9">
                    @if(products.Count ==0 )
                    {
                    @await Html.PartialAsync("_noproduct")
                    }
                    else
                    {
                        <div class="row">                  
                            @foreach (var product in products)
                            {    
                            <div class="col-md-3">
                                @await Html.PartialAsync("_product",product) @* dinamik olduğu için obje bejler bende product u veririm*@
                                @* Listeden gelen her product objesini _productcshtml e gönderiyoruz ve gönderdiğimiz obje product prodyccshtml tarafından karşılanıyor ve karşılanan bilgi içerinden modelname desc yazdırılır *@
                            </div>       
                            }   
                        </div>
                    }
                    </div>
                        </div>    
    </div>
    </main>

</body>
</html>